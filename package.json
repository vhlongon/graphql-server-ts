{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "node graphql server with code gen",
  "main": "dist/server/index.js",
  "engines": {
    "node": "^14.16.0"
  },
  "scripts": {
    "generate-types": "graphql-codegen --config codegen.yml",
    "server:build": "tsc -p . && copyfiles ./src/**/*.gql -f dist/graphql",
    "server:dev": "concurrently \"nodemon -r dotenv/config src/server/index.ts\" \"yarn generate-types --watch\"",
    "client:build": "webpack --mode production --progress",
    "client:dev": "webpack-dev-server",
    "start": "node dist/server/index.js",
    "build": "yarn server:build && yarn client:build",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.3.14",
    "apollo-server-express": "^2.22.2",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-import-node": "^0.0.4",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "webpack": "^5.30.0",
    "webpack-cli": "3.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/import-types-preset": "^1.18.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-react-apollo": "^2.2.3",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.2",
    "graphql-tag": "^2.11.0",
    "html-webpack-plugin": "^5.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "react-hot-loader": "^4.13.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3",
    "webpack-dev-server": "^3.11.2"
  }
}
